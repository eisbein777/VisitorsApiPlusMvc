@model @List<FitzroyVisitors.DTO.Visitor>

@{
    ViewBag.Title = "Visitors";
}

<h2>Visitors</h2>


<div class="row">
    <div class="col-md-2">First Name</div>
    <div class="col-md-2">Last Name</div>
    <div class="col-md-2">Company</div>
    <div class="col-md-2">Time In</div>
    <div class="col-md-3">Signature</div>
</div>

@foreach (var item in Model)
{

    var base64 = Convert.ToBase64String(item.Signature);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);



    <div class="row">
        <div class="col-md-2">@item.FirstName</div>
        <div class="col-md-2">@item.LastName</div>
        <div class="col-md-2">@item.Company</div>
        <div class="col-md-2">@item.TimeIn.ToShortDateString()</div>
        <div class="col-md-3"><img width="100" height="50" h src="@imgSrc" /></div>
    </div>









}
